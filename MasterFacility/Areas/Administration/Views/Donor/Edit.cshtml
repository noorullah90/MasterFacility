@model MasterFacility.Data.Models.Grants.donor
@using Westwind.Globalization

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" data-fouc data-ajax="true" id="modalForm" data-ajax-method="POST" data-ajax-success="onSuccessHandler(this,data,true,false,loadDonor)" data-ajax-begin="onLoadingHandler(this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="code" class="control-label"></label>
                <input asp-for="code" readonly class="form-control" />
                <span asp-validation-for="code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="donortypeid" class="control-label"></label>
                <select asp-for="donortypeid" selectedValue="@Model.donortypeid" class="form-control"></select>
                <span asp-validation-for="donortypeid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="namedari" class="control-label"></label>
                <input asp-for="namedari" class="form-control" />
                <span asp-validation-for="namedari" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="namepashto" class="control-label"></label>
                <input asp-for="namepashto" class="form-control" />
                <span asp-validation-for="namepashto" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isactive" /> @Html.DisplayNameFor(model => model.isactive)
                </label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">@DbRes.T("Save", "Common")</button>
            </div>
        </form>
    </div>
</div>

