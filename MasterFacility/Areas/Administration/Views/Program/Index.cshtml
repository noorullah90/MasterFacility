@using Westwind.Globalization

@{ ViewData["Title"] = "Index"; }

<div class="page">
    <div class="page-inner">
        <header class="page-title-bar">
            <div class="d-flex flex-column flex-md-row">
                <p class="lead">
                    <i class="fa fa-map-marker" aria-hidden="true"></i>
                    <span class="font-weight-bold">@DbRes.T("ProgramList", "Program")</span>
                </p>

            </div>
        </header>

        <div id="ContentContainer"></div>
        <button type="button" data-toggle="ajax-modal" data-callback="CreateFormInitialization" data-target="#exampleModalLong" data-url="/Administration/program/create" data-modal-title="@DbRes.T("Create", "Programs")" class="btn btn-success btn-floated"><span class="fa fa-plus"></span></button>
    </div>
</div>

<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongLabel" aria-hidden="true">
    <!-- .modal-dialog -->
    <div class="modal-dialog modal-lg" role="document">
        <!-- .modal-content -->
        <div class="modal-content">
            <!-- .modal-header -->
            <div class="modal-header">
                <h5 class="modal-title"> Updated </h5>
            </div><!-- /.modal-header -->
            <!-- .modal-body -->
            <div class="modal-body">
            </div><!-- /.modal-body -->


        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/ApplicationScripts/Common/modalHandler.js"></script>
    <script src="~/js/ApplicationScripts/Common/formHandler.js"></script>
    <script src="~/js/ApplicationScripts/programManagement.js"></script>

}